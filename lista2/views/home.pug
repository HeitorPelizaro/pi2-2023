doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css')
    style.
      .card {
        position: relative;
        overflow: hidden;
      }
      .card .card-body {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0) 100%);
        color: white;
        padding: 20px;
        transform: translateY(100%);
        transition: transform 0.3s ease-out;
      }
      .card:hover .card-body {
        transform: translateY(0);
        background: blue;
      }
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')
    title Página Inicial - Séries de TV

  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/") Séries de TV
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href="/bbt") #{bbt.nome}
            li.nav-item
              a.nav-link(href="/sn") #{sn.nome}
            li.nav-item
              a.nav-link(href="/st") #{st.nome}

    .container.mt-4
      h1 Todas as Séries
      .row
        .col-md-4.mb-4
          .card
            img.card-img-top(src=bbt.fotoPoster, alt=bbt.nome)
            .card-body
              h5.card-title #{bbt.nome}
              p.card-text #{bbt.resumo}
              a.btn.btn-primary(href="/bbt") Ver Mais

        .col-md-4.mb-4
          .card
            img.card-img-top(src=sn.fotoPoster, alt=sn.nome)
            .card-body
              h5.card-title #{sn.nome}
              p.card-text #{sn.resumo}
              a.btn.btn-primary(href="/sn") Ver Mais

        .col-md-4.mb-4
          .card
            img.card-img-top(src=st.fotoPoster, alt=st.nome)
            .card-body
              h5.card-title #{st.nome}
              p.card-text #{st.resumo}
              a.btn.btn-primary(href="/st") Ver Mais
