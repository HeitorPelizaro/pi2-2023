doctype html
html
  head
    title Dados do Arquivo JS
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css')
    include styles.pug
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')
    include navbar.pug
  body#background.container
    h1.display-4= nome

    .row
      .col-md-6
        img.img-thumbnail(src=fotoPoster, alt='Poster Image').bg-light.p-3.mt-3.rounded
      .col-md-6.bg-white.p-3.bg-light.p-3.mt-3.rounded
        h2.text-secondary Gênero
        ul.list-group
          each genero in generos
            li.list-group-item= genero

        h2.text-secondary Nota da série
        p.lead= nota

        h2.text-secondary Resumo da série
        p.lead= resumo

.bg-light.p-3.mt-3.rounded
    h2 Elenco
    .row
      each elencos in elenco
        .col-sm-6.col-md-4.col-lg-3.mb-3 
          .card.h-100 
            img.card-img-top(src=elencos.foto, alt='Actor Image')
            .card-body 
              h5.card-title= elencos.nome
              p.card-text= "Personagem: "+elencos.personagem

.bg-light.p-3.mt-3.rounded
      h2 Temporadas
      each temporada in temporadas
        button.btn.btn-primary(type='button', data-bs-toggle='collapse', data-bs-target='#temporada'+temporada.numero)= "Temporada: "+temporada.numero

        div.collapse(id='temporada'+temporada.numero)
        
          div.card.card-body 
            p= "Número de episódios: "+temporada.numero_episodios
            p= "Exibição: "+temporada.exibicao
            img.img-thumbnail(src=temporada.poster, alt='Season Poster')
            p= "Resumo: "+temporada.resumo

            h4 Episódios
            ul.list-group-flush
              each episodio in temporada.episodios
                li.list-group-item 
                  p= "Episódio: "+episodio.numero+" - "+episodio.nome+" (Nota: "+episodio.nota+")"
                  img.img-thumbnail(src=episodio.foto, alt='Episode Image')
                  p= "Resumo: "+episodio.resumo